<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
    <common.Bold_TextView
        android:text="455656567"
        android:id="@+id/order_number"
        android:textColor="@color/red"
        android:textSize="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:weightSum="4.1"
        android:orientation="horizontal"
        android:layout_marginRight="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <common.Bold_TextView
                android:textAllCaps="true"
                android:text="Amount"
                android:textColor="@color/black_color"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <common.Bold_TextView
                android:id="@+id/amount"
                android:layout_marginTop="5dp"
                android:text="$200.00"
                android:textColor="@color/black_color"
                android:textSize="20dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <common.Bold_TextView
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:text="Date"
                android:textColor="@color/black_color"
                android:textSize="18dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <common.Bold_TextView
                android:id="@+id/date"
                android:text="18/05/2018"
                android:textColor="@color/black_color"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <common.Bold_TextView
                android:id="@+id/time"
                android:text="12:30 pm"
                android:textColor="@color/black_color"
                android:textSize="12dp"
android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <common.Bold_TextView
                android:id="@+id/type_title"
                android:gravity="center"
                android:text="Type"
                android:textAllCaps="true"
                android:textColor="@color/black_color"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/deliveryTypeIcon"
                android:layout_marginTop="5dp"
               android:src="@drawable/type_delivery_icon"
android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp" />


        </LinearLayout>
        <View
            android:layout_marginLeft="5dp"
            android:layout_width="1dp"

            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@color/lightgrey"/>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/status_icon"
                android:src="@drawable/status_pending_icon"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <common.DetailsCustomTextView
                android:id="@+id/status"
                android:text="pending"
                android:layout_marginTop="5dp"
                android:textColor="@color/black_color"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/view"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp">
<View
    android:id="@+id/view1"
   android:layout_weight="3"
    android:layout_width="0dp"
    android:layout_height="100dp"/>
        <View
            android:id="@+id/view2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <View

        android:layout_alignParentTop="true"

        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <View
android:layout_marginTop="5dp"
        android:layout_below="@id/view"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</RelativeLayout>
